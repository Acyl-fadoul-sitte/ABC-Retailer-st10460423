@{
    ViewData["Title"] = "ABC Retailer Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container my-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">ABC Retailer</h1>
        <p class="text-muted fs-5">Manage Customers, Products, Orders, and Uploads</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4">
        <!-- Customers Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-lg rounded-4 bg-primary text-white">
                <div class="card-body text-center py-5">
                    <i class="fas fa-users fa-2x mb-3"></i>
                    <h5 class="card-title fw-bold">Customers</h5>
                    <p class="card-text">View and manage all your customers.</p>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-light rounded-pill px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Products Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-lg rounded-4 bg-success text-white">
                <div class="card-body text-center py-5">
                    <i class="fas fa-boxes-stacked fa-2x mb-3"></i>
                    <h5 class="card-title fw-bold">Products</h5>
                    <p class="card-text">Manage your product catalog and stock.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-light rounded-pill px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-lg rounded-4 bg-warning text-dark">
                <div class="card-body text-center py-5">
                    <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                    <h5 class="card-title fw-bold">Orders</h5>
                    <p class="card-text">Track and manage all customer orders.</p>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-light rounded-pill px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Uploads Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-lg rounded-4 bg-danger text-white">
                <div class="card-body text-center py-5">
                    <i class="fas fa-cloud-arrow-up fa-2x mb-3"></i>
                    <h5 class="card-title fw-bold">Uploads</h5>
                    <p class="card-text">Upload files or payment proofs.</p>
                    <a asp-controller="Upload" asp-action="Index" class="btn btn-light rounded-pill px-4">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional: Recent Operations Table -->
    <div class="mt-5">
        <div class="card border-0 shadow rounded-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                <h5 class="mb-0 fw-bold">Recent Operations</h5>
                <button class="btn btn-light btn-sm rounded-pill px-3">Refresh</button>
            </div>
            <div class="card-body p-4">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Module</th>
                            <th>Action</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>001</td>
                            <td>Customer</td>
                            <td>Create</td>
                            <td><span class="badge bg-success">Completed</span></td>
                            <td>07 Oct 2025</td>
                            <td><button class="btn btn-outline-primary btn-sm rounded-pill">View</button></td>
                        </tr>
                        <tr>
                            <td>002</td>
                            <td>Product</td>
                            <td>Update</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>07 Oct 2025</td>
                            <td><button class="btn btn-outline-primary btn-sm rounded-pill">View</button></td>
                        </tr>
                        <tr>
                            <td>003</td>
                            <td>Order</td>
                            <td>Process</td>
                            <td><span class="badge bg-info text-dark">Processing</span></td>
                            <td>07 Oct 2025</td>
                            <td><button class="btn btn-outline-primary btn-sm rounded-pill">View</button></td>
                        </tr>
                        <tr>
                            <td>004</td>
                            <td>Upload</td>
                            <td>File Upload</td>
                            <td><span class="badge bg-danger">Failed</span></td>
                            <td>07 Oct 2025</td>
                            <td><button class="btn btn-outline-primary btn-sm rounded-pill">View</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
